# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
max_line_length = 80

# Matches multiple files with brace expansion notation
# Set default charset
[*.py]
charset = utf-8
indent_style = space
indent_size = 4
max_line_length = 88

# 2 space indentation
[*.{html,css,less,scss,yml,json}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.{md,markdown,rst,toml}]
charset = utf-8
indent_style = space
indent_size = 2
