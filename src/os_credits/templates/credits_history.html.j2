<!doctype html>
<html>
  <head>
    <title>Line Chart</title>
    <link href="/static/c3/c3.min.css" rel="stylesheet">
    <script src="/static/d3.min.js"></script>
    <script src="/static/c3/c3.min.js"></script>
    <style>
canvas {
  -moz-user-select: none;
  -webkit-user-select: none;
  -ms-user-select: none;
}
    </style>
  </head>

  <body>
    <div id="chart" style="width: 700px"></div>

    <script>

      async function getCreditsHistory(project_name='history_test') {
        let response = await fetch(`/api/credits_history/${project_name}`);
        return await response.json();
      }
let data = {};
var chart = {};
getCreditsHistory('history_test').then(function(data) {
  c3.generate({
    bindto: '#chart',
    data: {
      xFormat: '%Y-%m-%d %H:%M:%S',
      x: 'timestamps',
      columns: [data.timestamps, data.credits],
      names: {
        credits: 'Credits',
        metrics: 'Metrics',
      }
    },
    axis: {
      x: {
        type: 'timeseries',
        tick: {
          format: '%Y-%m-%d %H:%M:%S',
          rotate: -60,
          multiline: true
        }
      }
    },
    tooltip: {
      grouped: true,
    },
  })}
);
    </script>
  </body>

</html>
